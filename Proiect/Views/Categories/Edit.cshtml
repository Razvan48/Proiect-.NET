@model Proiect.Models.Category

@{
    ViewData["Title"] = "Categories Edit";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Categories", routeValues: new { id = Model.Id}))
            {
                @Html.Label("CategoryName", "Category Name")
                <br />
                @Html.TextBox("CategoryName", null, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger"})
                <br />

                <br />
                <button class="btn btn-success" type="submit">Submit Changes</button>

                <br />
                <br />
                <br />

                @Html.ValidationSummary(false, "", new { @class = "text-danger"})
            }
        </div>
    </div>
</div>
