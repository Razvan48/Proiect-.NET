@model Proiect.Models.Discussion

@* cauzeaza conflict cu campul title din formularul de mai jos
@{
    ViewData["Title"] = "Discussions New";
}
*@

<h2>Adding new Discussion</h2>

<br />
<br />
<br />

@*Debug*@
<p>@ViewBag.CategoryId</p>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Discussions"))
            {
                @Html.HiddenFor(m => m.CategoryId, new { Value = ViewBag.CategoryId}) @*CategoryId este in ViewBag*@

                @Html.Label("Title", "Discussion Title")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
                <br />

                @Html.Label("Content", "Discussion Content")
                <br />
                @Html.TextArea("Content", null, new { @class = "form-control"})
                @Html.ValidationMessage("Content", null, new { @class = "text-danger"})
                <br />

                <br />
                <button class="btn btn-success" type="submit">Add Discussion</button>

                <br />
                <br />
                <br />

                @Html.ValidationSummary(false, "", new { @class = "text-danger"})
            }
        </div>
    </div>
</div>
